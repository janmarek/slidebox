<div class="presentation">
	<div class="presentation-preview {$presentation->themeVariant->theme->className} {$presentation->themeVariant->className}">
		<div class="slide-header">
			<h3><a n:href=":Presentation:Detail: id => $presentation->id">{$presentation->name|untitled}</a></h3>
		</div>
		<div class="slide-content">
			<p>
				at {$presentation->created|datetime} by
				<a n:href=":Presentation:Profile:default id => $presentation->user->id">{$presentation->user->name}</a>
			</p>
			<p n:if="$presentation->description">
				{$presentation->description|truncate:30}
			</p>
		</div>
	</div>
</div>